@model IEnumerable<MyOnlineCraftWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
    ViewBag.heading = "Categories";
    ViewBag.controller = "Category";

}

<partial name="_Notification"></partial>
<partial name="_CreateNew" view-data="ViewData">

<table class=" table table-hover table-borderless table-striped">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.catId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.catId)
            </td>
            <td>    
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td>
                 <a asp-action="Edit" asp-route-id="@item.catId" class="btn btn-primary"><i class="bi bi-pencil-square p-2"></i>Edit</a> 
                <a asp-action="Details" asp-route-id="@item.catId" class="btn btn-info"><i class="bi bi-info-circle p-2"></i>More info</a> 
                <a asp-action="Delete" asp-route-id="@item.catId" class="btn btn-danger"><i class="bi bi-trash3 p-2"></i>Delete</a> 
                        </td>
                    }
                    else
                    {
                        <td>
                <a asp-action="Details" asp-route-id="@item.catId" class="btn btn-info"><i class="bi bi-info-circle p-2"></i>More info</a> 
                        </td>
                    }

        </tr>
}
    </tbody>
</table>
