@*@model MyOnlineCraftWeb.Models.Product*@
@model Shoppingcart


@{
    ViewData["Title"] = "Details";
}



<form asp-action="Details" method="post">
    <input hidden asp-for="ProductID" />
        <div class="card  container pt-4">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h2 class="text-white-50">@Model.Product.productName</h2>
                </div>
                
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <p class="text-secondary">@Model.Product.productDescription</p>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price(Rs)</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div class="text-decoration-line-through" >@Model.Product.ActualPrice</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.DiscountPrice</div>
                                </div>
                            </div>
                            
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input min="1" type="number" asp-for="count" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="~/Images/@Model.Product.imageURL" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-controller="Home" class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button  type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>


