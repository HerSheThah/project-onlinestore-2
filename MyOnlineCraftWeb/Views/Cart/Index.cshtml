@model MyOnlineCraftWeb.Models.ViewModel.ShoppingCartVM

<form method="post">
	<br />

	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a class="btn btn-outline-info btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in @Model.shoppingcartList){
					<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="~/Images/@item.Product.imageURL" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@item.Product.productName</strong></h5>
						<p><small>@item.Product.productDescription</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							
							 

							<h6><strong> <span class="">@item.Product.DiscountPrice.ToString("c") </span><span class="text-muted">x</span> @item.count  </strong></h6>
							 <h6><span class="text-decoration-line-through">@item.Product.ActualPrice.ToString("c")</span>  </h6>

						</div>
						<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class="w-75 btn-group" role="group">
								<a asp-action="Plus" asp-route-cartId="@item.Id" class=" btn btn-primary">
									<i class=" bi-plus-square"></i>
								</a> &nbsp;
								<a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="Delete" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				}
				
				<hr />

				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (INR):</span>
								<strong class="text-info">₹  @Model.cartTotal</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
